{
  "compilerOptions": {
    "rootDir": "src",          
    "outDir": "dist",          
    "module": "NodeNext",      
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "verbatimModuleSyntax": false
  },
  "include": ["src"]
}
